generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  students  Student[]
  createdAt DateTime  @default(now())
}

model Student {
  id         String    @id @default(uuid())
  name       String
  email      String?
  phone      String?
  startDate  DateTime
  monthlyFee Float
  notes      String?
  userId     String
  classes    Class[]
  payments   Payment[]
  progress   Note[]
  createdAt  DateTime  @default(now())
  User       User      @relation(fields: [userId], references: [id])
}

model Class {
  id        String   @id @default(uuid())
  date      DateTime
  status    String
  notes     String?
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String
  createdAt DateTime @default(now())
}

model Payment {
  id        String    @id @default(uuid())
  dueDate   DateTime
  paidDate  DateTime?
  amount    Float
  status    String
  student   Student   @relation(fields: [studentId], references: [id])
  studentId String
  createdAt DateTime  @default(now())
}

model Note {
  id        String   @id @default(uuid())
  content   String
  date      DateTime
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String
  createdAt DateTime @default(now())
}
